rules_version = '2';

// ⚠️ CẢNH BÁO: Rules này MỞ TOÀN BỘ CHO MỤC ĐÍCH TEST.
// BẤT KỲ AI cũng có thể đọc và ghi dữ liệu.

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Prompt Packs
    match /prompt_packs/{packId} {
      allow read, write: if true;
    }

    // System Settings
    match /system_settings/{docId} {
      allow read, write: if true;
    }

    // Projects (New)
    match /projects/{projectId} {
      allow read, write: if true;
    }

    // Users (New)
    match /users/{userId} {
      allow read, write: if true;
    }

    // Fallback
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
